doctype html
html(lang="en")
  head
    title Kuvia
    meta(charset="utf-8")
    style!= galleryCss
    each css in cssUrls
      link(rel="stylesheet", type="text/css", href=css)
    if listJs
      script(type="application/javascript")!= listJs
    each js in jsUrls
      script(type="application/javascript", src=js)
    script(type="application/javascript")!= galleryJs
    base(target="_blank")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
  body
    h1(id='noimageswarning') No images found
    div(id="topbar")
      ul
        li
          a(href="#", class="toggle_sidebar", title="Toggle sidebar (space)") &#9776;
        li
          a(href="#", class="next_image", title="Next (J)") &#9660;
        li
          a(href="#", class="previous_image", title="Previous (K)") &#9650;
        li
          a(href="#", class="toggle_zoom", title="Zoom (Z)") [Z]
        li
          span(id="imginfo")
    div(id="sidebar")
      ul(id="linksarea")
      a(href="http://github.com/Lepovirta/kuvia") Kuvia
    div(id="imgarea" class="zoom-min")
