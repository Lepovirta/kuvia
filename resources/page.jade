doctype html
html(lang="en")
  head
    title Instant Gallery
    meta(charset="utf-8")
    if cssSrc
      link(rel="stylesheet", type="text/css" href=cssSrc)
    else
      style!= igCss
    script(type="application/javascript")!= listJs
    script(type="application/javascript")!= igJs
    base(target="_blank")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
  body
    h1(id='noimageswarning') No images found
    div(id="topbar")
      ul
        li
          a(href="#", class="toggle_sidebar", title="Toggle sidebar (space)") &#9776;
        li
          a(href="#", class="previous_image", title="Previous (K)") &#9650;
        li
          a(href="#", class="next_image", title="Next (J)") &#9660;
        li
          a(href="#", class="toggle_zoom", title="Zoom (Z)") &#128270;
        li
          span(id="imginfo")
    div(id="sidebar")
      ul(id="linksarea")
      a(href="http://github.com/jkpl/instantgallery") Instant Gallery
    div(id="imgarea")
